<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="@android:style/Theme.Material.Settings">
        <!-- Customize your theme here. -->
        <item name="android:preferenceCategoryStyle">@style/PreferenceCategory</item>
    </style>

    <style name="PreferenceCategory">
        <item name="android:layout">@layout/preferences_category</item>

        <item name="android:background">#f1f2f2</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#939393</item>
        <item name="android:textSize">12sp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingStart">8dip</item>
        <item name="android:paddingTop">5dip</item>
        <item name="android:paddingBottom">5dip</item>
    </style>


</resources>

